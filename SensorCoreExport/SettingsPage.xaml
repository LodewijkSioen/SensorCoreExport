<Page
    x:Class="SensorCoreExport.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SensorCoreExport"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="12">
        <TextBlock Style="{ThemeResource TitleTextBlockStyle}">SensorCore Export</TextBlock>
        <TextBlock x:Uid="AboutPageTitle" Text="$About$" Style="{ThemeResource HeaderTextBlockStyle}" CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}"/>
        <RichTextBlock FontSize="14" TextAlignment="Justify" OverflowContentTarget="{Binding ElementName=firstOverflowContainer}">
            <Paragraph>
                <Run>Icon: </Run>
                <Hyperlink NavigateUri="https://thenounproject.com/term/tracking/165058">tracking by Gerald Wildmoser from the Noun Project</Hyperlink>
            </Paragraph>
        </RichTextBlock>
     </StackPanel>
</Page>
